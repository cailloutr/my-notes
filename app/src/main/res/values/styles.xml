<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.MyNotes.TextView.Title" parent="Widget.MaterialComponents.TextView">
        <item
            name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline4
        </item>
    </style>

    <style name="Widget.MyNotes.TextView.Description" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
    </style>

    <style name="Widget.MyNotes.TextView.Date" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
    </style>

    <style name="Widget.MyNotes.TextInputLayout.CircularOutlinedBox"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusBottomEnd">@dimen/fragment_notes_list_text_input_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/fragment_notes_list_text_input_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/fragment_notes_list_text_input_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/fragment_notes_list_text_input_radius</item>
        <item name="endIconCheckable">true</item>
        <item name="endIconMode">custom</item>
        <item name="hintEnabled">false</item>
    </style>


    <style name="Widget.MyNotes.TextInputLayout.OutlinedBox.BorderlessEditText"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="Widget.MyNotes.TextInputEditText.OutlinedBox.BorderlessEditText.Title"
        parent="Widget.MyNotes.TextView.Title">
        <item name="android:inputType">textMultiLine</item>
        <item name="maxHeight">@dimen/fragment_new_note_edittext_title_max_height</item>
    </style>

    <style name="Widget.MyNotes.TextInputEditText.OutlinedBox.BorderlessEditText.Description"
        parent="Widget.MyNotes.TextView.Description">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="Widget.MyNotes.View.Divisor" parent="Widget.MaterialComponents.MaterialDivider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@drawable/gradient_divisor</item>
    </style>

    <style name="Widget.MyNotes.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/amber_500</item>
        <item name="backgroundTint">@color/amber_500</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="Widget.MyNotes.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="Widget.MyNotes.TextView.OptionsBottomSheet.Item" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">@dimen/match_constrain</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/border_margin</item>
        <item name="android:layout_marginEnd">@dimen/border_margin</item>
        <item name="android:drawablePadding">
            @dimen/option_bottom_sheet_textview_drawable_padding
        </item>
        <item name="android:padding">@dimen/option_bottom_sheet_textview_padding</item>
        <item name="android:textSize">@dimen/option_bottom_sheet_textview_textsize</item>
    </style>

    <style name="SliderIndicator">
        <item name="android:layout_width">@dimen/SliderIndicator_width</item>
        <item name="android:layout_height">@dimen/SliderIndicator_height</item>
        <item name="android:layout_marginTop">@dimen/border_margin</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="Widget.MyNotes.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
        <item name="android:textColor">@color/black</item>
        <item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>
        <item name="background">@color/white</item>
    </style>

</resources>